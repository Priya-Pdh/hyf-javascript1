// Create a function that takes 3 arguments and returns the sum of the these arguments.

// one way to sum the agruments

function sumAgr(a, b, c) {
  console.log(a + b + c)
}
sumAgr(1 , 2, 3)




// another way to sum the arguments

function sumAll() {
  let sum = 0;
  for(let i = 0; i < arguments.length; i++) {
    sum += arguments[i];
  }
  return sum;
}
sumAll(10, 100, 500);
