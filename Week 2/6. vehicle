// 6. Create a function called vehicle, like before, but takes another parameter called age, so that vehicle("blue", 1, 5) prints 'a blue used car'

//first Create a function called vehicle

function vehicle(color, age, code){ 

// create a condition that shows the vechicle is used with certain number
  
  if (age !== 0) {
  age = "used";
} 
// create another condition with code for car
  
  if (code === 5) {
  code = "car";
} else {
  code = "invalid vehicleType"
} 

return ("a " + color + " " + age + " " + code);
  
}
vehicle("blue", 1, 5)


output: 'a blue used car'
