
// Create a function named vehicleType that receives a color, and a code

function vehicleType(color, code) {
// now create a condition where code 1 is car and code 2 is motorbike
   
   if (code == 1) {
     code = "car";
   } if (code == 2)  {
   code = "motorbike";
   }
  return "a " + color + " " + code; // return the parameters here
}
vehicleType("blue", 2 ); // finally call the function


//output: 'a blue motorbike'



// another method

const vehicleType = (code, color) => {
 if (code == 1) {
     console.log(`a ${color} car`);
   } else if (code == 2)  {
   console.log(`a ${color} motobike`);
   }  else {
   console.log("invalid code");
   }
 } 
   
vehicleType("blue", 2 );


// one line method:
const vehicleType = (code, color) => {
 code === 1 ? console.log(`a ${color} car`): console.log(`a ${color} motobike`);
  } 
  vehicleType("blue", 2 );

